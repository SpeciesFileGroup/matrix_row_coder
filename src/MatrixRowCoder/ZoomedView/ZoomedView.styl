.zoomed-view
    background-color white
    border 1px solid black
    display flex
    left 0
    padding 2vmin
    position absolute
    top 0
    transform-origin 0 0
    right 0
    z-index 1

    &__transition
        &-enter
            opacity 0
            transform scale(0)

            &-active
                transition all 300ms

            &-to
                opacity 1
                transform scale(1)

        &-leave
            &-active
                transition opacity 300ms

            &-to
                opacity 0

    &__close-button
        position absolute
        right 24px
        top 24px

    &__descriptor-details
    &__observation-details
        flex 1 1 0

    &__descriptor-title
        margin 0 0 1vmin 0